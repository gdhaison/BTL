<div class="row">
  <div class="col-md-6 offset-md-3">
  <%= form_with scope: :session, url: login_path, local: true do |f| %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control',id: "input1" %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control',id: "input2" %>
      <h1></h1>
      <%= f.submit "Log in", class: "btn btn-primary", id: "btn-login" %>
      <h1></h1>
      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span>Remember me on this computer</span>
      <% end %>
    <% end %>

    <p>New user? <%= link_to "Sign up now!", signup_path %></p>
  </div>
</div>