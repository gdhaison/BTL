<%= render 'micropost_form' %>
<div class="col-md-8">
<%=link_to "Create new Post",new_admin_micropost_path,:class=>"btn btn-success"%>
<% if @user.microposts.any? %>
  <h3>Microposts (<%= @user.microposts.count %>)</h3>
  <ol class="microposts">
    <%= render @microposts %>
  </ol>
  <%= will_paginate @microposts %>
<% end %>
</div>
