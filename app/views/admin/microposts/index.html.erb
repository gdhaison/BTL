<div class="wrap">
  <div class="card">
    <center><h2>Create new Post</h2></center>
  </div>
</div>
<div class="clear">
  <h1></h1>
</div>
<%= render 'micropost_form' %>
<div class="col-md-8">
<% if @user.microposts.any? %>
  <h3>Microposts (<%= @user.microposts.count %>)</h3>
  <ol class="microposts">
    <%= render @microposts %>
  </ol>
  <%= will_paginate @microposts %>
<% end %>
</div>
