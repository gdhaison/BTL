
<div class="wrap">
<%= link_to "Create new Brand", new_admin_brand_path, :class => "btn btn-primary"%>
<div class="table-responsive">
              <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                  <tr>
                    <th>Name</th>
                    <th>Delete</th>
                  </tr>
                </thead>
                <tbody>
                  <% @brands.each do |brand|%>
                  <tr>
                    <td><%= brand.name %></td>
                    <td><%= link_to "Delete",admin_brand_path(brand), method: :delete,
                    data: { confirm: "Are you sure?" }%>
                    </td>
                  </tr>
                  <%end%>
                  </tbody>
                  </table>
                </div>
            </div>