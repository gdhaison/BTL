						<li><%=link_to "Admin page", admin_path%></li>
						<%end%>
						<%end%>
					
			    	<div class="clear"></div>
     			</ul>
	     	</div>
	     	<div class="search_box">
				 <%= form_for :term, url: search_index_path, html: {class: "search"}, method: :get do |form| %>
					<%= text_field_tag :term, params[:term], class: "custom" %>
					<%= submit_tag "Search", name: nil, class: "register" %>
			<% end %>
	     	</div>
	     	<div class="clear"></div>
	     </div>	     
	
   </div>
