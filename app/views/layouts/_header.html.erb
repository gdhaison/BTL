			<h1 class="cart-text"><%= render 'layouts/cart_text' %></h1>
	 <div class="clear"></div>
  </div>
	<div class="header_bottom">
	     	<div class="menu">
	     		<ul>
			    	<li class="active"><a href="index.html">Home</a></li>
			    	<li><%=link_to "About",about_path%></li>
